<div class="order-form">
  <% if flash[:errors] %>
    <ul>
      <% flash[:errors].each do |error|  %>
        <li><%= error %></li>
      <% end %>
    </ul>
  <% end %>
  <h1>Create Order</h1>
<form action="/orders" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="order_number">Number</label>
  <input
    type="text"
    name="order[number]"
    id="order_number"
  >

  <label for="order_tracking_number">Tracking Number</label>
  <input
    type="text"
    name="order[tracking_number]"
    id="order_tracking_number"
  >
  <br>

  <label for="order_address">Street Address</label>
  <input
    type="text"
    name="order[address]"
    id="order_address"
  >

  <label for="location">City</label>
  <select class="select-style" name="order[location_id]" id="location">
    <option disabled selected>-- select a city --</option>
    <% Location.all.each do |location| %>
      <option
        value="<%= location.id %>">
        <%= location.city %>
      </option>
    <% end %>
  </select>

  <label for="vendor">Vendor</label>
  <select class="select-style" name="order[vendor_id]" id="vendor">
    <option disabled selected>-- select a vendor --</option>
    <% Vendor.all.each do |vendor| %>
      <option
        value="<%= vendor.id %>">
        <%= vendor.name %>
      </option>
    <% end %>
  </select>
  <br>

  <label for="order_shipped_at">Shipped At</label>
  <input
    type="date"
    name="order[shipped_at]"
    id="order_shipped_at"
  >
  <label for="order_delivered_at">Delivered At</label>
  <input
    type="date"
    name="order[delivered_at]"
    id="order_delivered_at"
  >
  <br>

  <input type="submit" value="Create Order">
</form>

<a href="/orders">Back</a>

</div>
